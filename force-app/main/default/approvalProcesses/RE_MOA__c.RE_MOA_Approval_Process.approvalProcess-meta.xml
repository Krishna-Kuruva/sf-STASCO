<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>RE_MOA_Approval_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Request Submitted</label>
        <name>Request_Submitted</name>
    </approvalStep>
    <emailTemplate>unfiled$public/MOA_initial_submission</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>RE_AM_Challenged_Price__c &lt; RE_Final_PSP__c</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>RE_AgreedPrice</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RE_AM_Challenged_Price_has_been_approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>RE_Status_Change_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>RE_Agreed_PSP_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RE_AM_Challenged_Price_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>RE_Status_Change_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>RE_Status_Change_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>MOA Approval Process</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
