<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>RE_Approver_Comments__c</field>
        <field>RE_Final_Price_Rebate__c</field>
        <field>RE_Margin_on_LDC__c</field>
        <field>RE_Margin_on_MC__c</field>
        <field>RE_Custom_Opp_Approve__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>RE_STL_Support</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>RE_customer_Opps</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Sales Team Lead is the initial approver</description>
        <entryCriteria>
            <criteriaItems>
                <field>RT_Price_Book__c.RE_Custom_Opp_Approve__c</field>
                <operation>equals</operation>
                <value>Submitted STL</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>STL Level 1</label>
        <name>STL_Level_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>RE_Update_Approve</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>RE_update_Latest_price_dt</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>RE_customer_Opps</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Pricing Manager Approve the positive margin</description>
        <entryCriteria>
            <criteriaItems>
                <field>RT_Price_Book__c.RE_Custom_Opp_Approve__c</field>
                <operation>equals</operation>
                <value>Submitted PM</value>
            </criteriaItems>
            <criteriaItems>
                <field>RT_Price_Book__c.RE_Margin_on_MC__c</field>
                <operation>greaterThan</operation>
                <value>0</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Level 2 PM Positive mrg</label>
        <name>Level_2_PM_Positive_mrg</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>RE_Support_PM</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>RE_customer_Opps</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Pricing Manager approve for negative margin MC</description>
        <entryCriteria>
            <criteriaItems>
                <field>RT_Price_Book__c.RE_Custom_Opp_Approve__c</field>
                <operation>equals</operation>
                <value>Submitted PM</value>
            </criteriaItems>
            <criteriaItems>
                <field>RT_Price_Book__c.RE_Margin_on_MC__c</field>
                <operation>lessOrEqual</operation>
                <value>0</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Level 2 PM Negative mrg</label>
        <name>Level_2_PM_Negative_mrg</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>RE_BM_Approve</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>RE_Latest_price_dt_update</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>RE_customer_Opps</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Business manager Approve for Negative Margin</description>
        <entryCriteria>
            <criteriaItems>
                <field>RT_Price_Book__c.RE_Custom_Opp_Approve__c</field>
                <operation>equals</operation>
                <value>Support PM</value>
            </criteriaItems>
            <criteriaItems>
                <field>RT_Price_Book__c.RE_Margin_on_MC__c</field>
                <operation>lessOrEqual</operation>
                <value>0</value>
            </criteriaItems>
        </entryCriteria>
        <label>level 3 BM</label>
        <name>level_3_BM</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>RT_Price_Book__c.RecordType</field>
            <operation>equals</operation>
            <value>MY Price Book</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>RE_Update_Reject</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>RE_MY_Customer Opps</label>
    <processOrder>3</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
