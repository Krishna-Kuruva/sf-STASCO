<apex:page standardStylesheets="false" showheader="false" applyBodyTag="false" applyHtmlTag="false" title="Forgot Password Confirm" >
    <html lang="en">
        <apex:slds />
        <div class="slds-scope">
            <style>
               @font-face {
                font-family: SFProText;
                src: url(/tradingandsupply/resource/SFProTextRegular) format('TrueType');
            }

            @font-face {
                font-family: SFProTextBold;
                src: url(/tradingandsupply/resource/SFProTextBold) format('TrueType');
            }

                 body{
              font-family: -apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,Oxygen-Sans,Ubuntu,Cantarell, 'Helvetica Neue',sans-serif;
}
                .Background  {
                    position:Fixed;
                }
                .slds-scope ul {
               list-style: disc ! important;
                    }
                .container {
                Right:154px;
                padding:35px 35px 48px 35px;
                width:494px;
                height:auto;
                position: absolute;
                top:215px;
                background-color:white;
             
                }
                .title {
                    font-weight: 600;
                    font-size: 20px;
                    line-height: 24px;
                    color: #404040;


                }

                .smallText {
                    font-weight: 400;
                    font-size: 11px;
                    line-height: 16px;
                    font-family: SFProText, Arial, Helvetica, sans-serif;
                    color: #404040;
                }

            .vl {
                border-left: 1px solid #B3B7BC;
                    height: 40px;
                    float: right;
                    margin-right: 16px;
            }
                .logo{
                    margin-top: 4px;
                    }
                    
                .header{
                    margin-bottom: 35px;
                
                }
                .confirmMessage h1{
                    font-weight: 700;
                    font-size: 16px;
                   line-height: 20px;
                   font-family: SFProTextBold, Arial, Helvetica, sans-serif;
                    color: #404040;
                
                }
            </style>
            <head>
                <meta name="viewport" content="width=device-width, initial-scale=1.0" />
                <meta http-equiv="X-UA-Compatible" content="ie=edge" />
                <title>Forgot password Confirm</title>
            </head>
            <body style="background-color:powderblue;">
                <main>
                <div class="container">
                    <header>
                    <div class="slds-grid slds-wrap header">
                        <div class="slds-col slds-size_1-of-6">
                            <apex:image id="theImage" value="{!$Resource.Logo}" width="35px" height="35px" alt="shell logo with red border and yellow background" styleClass="logo"/>
                            <div class="vl"></div>
                        </div>
                        <div class="slds-col slds-size_5-of-6">
                            <span class="smallText">Trading &amp; Supply</span><br/>
                            <span class="title">Chemical Customer Portal</span>  
                        </div>
                    </div> 
                   </header>
                   <section>
                    <div class="slds-grid slds-wrap">
                        <div class="slds-col slds-size_1-of-6"></div>
                        <div class="slds-col slds-size_5-of-6">
                            <div class="confirmMessage">
                               <h1> An email has been sent to your email address including a link to set your password.</h1>
                            </div>
                        </div>
                    </div>
                  </section> 
                </div>
            </main>
            </body>
        </div>
    </html>
</apex:page>